{
  "configurations": [
    {
      "type": "aws-sam",
      "request": "direct-invoke",
      "name": "Invoke Lambda",
      "invokeTarget": {
        "target": "code",
        "lambdaHandler": "app.read",
        "projectRoot": "${workspaceFolder}/functions"
      },
      "lambda": {
        "runtime": "nodejs12.x",
        "payload": {
          "json": {
            "body": "{\"message\": \"hello world\"}",
          }
        },
      }
    }
  ]
}